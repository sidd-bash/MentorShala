<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/images/m4.jpg" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/CSS/mentor_registration.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    <script src="/js/registration_form_data/app.js"></script>
    <title>Project_Artifact</title>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light head-bar">
      <div class="container-fluid">
        
        <div style="font-size: 2rem;font-family: 'Raleway', sans-serif;">
          <b>MentorShala</b>
          <div style="font-size: 4rem; margin: 1rem 0rem;font-family: 'Rubik', sans-serif;">Mentee Personal Information</div>
        </div>
      </div>
    </nav>
        
      
    <div class="d-flex container">
      <div class="row row-custom">
        <div class="col-sm col-custom d-flex align-items-center">
      
            <img id="navbarImg" src="/images/home2.png" alt="">
          
        </div>
        <div class="col-sm col-custom">
          <form class="row g-3 needs-validation" novalidate action="/cardMentee" method="post">
            <div>
              <label for="firstName" class="form-label">First name</label>
              <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Mark" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div>
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Otto" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div>
              <label for="userName" class="form-label">Username</label>
              <div class="input-group has-validation">
                <!-- <span class="input-group-text" id="inputGroupPrepend"></span> -->
                <input type="text" class="form-control" name="userName" placeholder="Mark_Otto" id="userName" aria-describedby="inputGroupPrepend" required>
                <div class="invalid-feedback">
                  Please choose a username.
                </div>
              </div>
            </div>
            <div>
              <label for="dob" class="form-label">DOB</label>
              <input type="date" class="form-control" name="dob" id="dob" placeholder="YYYY-MM-DD" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div>
              <label for="phoneNumber" class="form-label">Phone</label>
              <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="+91 xxxxxxxxxx" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div>
              <label for="city" class="form-label">City</label>
              <input type="text" class="form-control" name="city" id="city" required>
              <div class="invalid-feedback">
                Please provide a valid city.
              </div>
            </div>
            
            <div>
              <label for="educationInfo" class="form-label">Education</label>
              <select class="form-select" name="educationInfo" id="educationInfo" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="School">School</option>
                <option value="Bachelor">Bachelor</option>
                <option value="Masters">Masters</option>
                <option value="Post graduate">Post graduate</option>
    
              </select>
              <div class="invalid-feedback">
                select a valid answer from the given option.
              </div>
            </div>
            
            <div>
              <label for="college" class="form-label">College</label>
              <input type="text" class="form-control" name="college" id="college" required>
              <div class="invalid-feedback">
                Please provide a valid city.
              </div>
            </div>

            <div>
                <label for="preferdlang" class="form-label">Prefered Language</label>
                <!-- <input type="text" class="form-control" id="validationCustom03" required> -->
                <select class="form-select" id="preferdlang" name="preferdlang" aria-label="Default select example" required>
                  <option selected>Open this select menu</option>
                  <option value="English">English</option>
                  <option value="Hindi">Hindi</option>
                  </select>
                <div class="invalid-feedback">
                  Please provide a valid Prefered Language.
                </div>
              </div>
    
              <div>
                <label for="skills" class="form-label">Skills</label>
                <textarea   cols="30" rows="2" class="form-control" name="skills" id="skills" required></textarea>
                <div class="invalid-feedback">
                  Please provide a valid Interest.
                </div>
              </div>
              
              <div>
                <label for="Interest" class="form-label">Interests</label>
                <textarea  cols="30" rows="2" class="form-control" name="interest" id="interest" required></textarea>
                <div class="invalid-feedback">
                  Please provide a valid Interest.
                </div>
              </div>

              <div>
                <label for="shortDescription" class="form-label">Short Description</label>
                <textarea  cols="30" rows="2" class="form-control" name="shortDescription" id="shortDescription" required></textarea>
                <div class="invalid-feedback">
                  Please provide a valid Description.
                </div>
              </div>
    
            <div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="form-check-label" for="invalidCheck">
                  Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                  You must agree before submitting.
                </div>
              </div>
            </div>
            <div>
              <button class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/js/mentor-registration.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>