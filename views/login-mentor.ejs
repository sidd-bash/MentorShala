  </head>
  <body>
    <div class="container">
      <div class="row px-3">
        <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
          <div class="img-left d-none d-md-flex"></div>

          <div class="card-body">
            <h4 class="title text-center mt-4">Login into Mentor Account</h4>
            <form action="/loginToCard" method="post" class="form-box px-3">
              <div class="form-input">
                <span><i class="fa fa-envelope-o"></i></span>
                <input
                  type="email"
                  name="email"
                  id="email"
                  placeholder="Email Address"
                  tabindex="10"
                  required
                />
              </div>
              <div class="form-input">
                <span><i class="fa fa-key"></i></span>
                <input
                  type="password"
                  name="password"
                  id="password"
                  placeholder="Password"
                  required
                />
              </div>

              <div class="mb-3">
                <div class="custom-control custom-checkbox">
                  <input
                    type="checkbox"
                    class="custom-control-input"
                    id="cb1"
                    name=""
                  />
                  <label class="custom-control-label" for="cb1"
                    >Remember me</label
                  >
                </div>
              </div>

              <div class="mb-3">
                <button type="submit" class="btn btn-block text-uppercase">
                  Login
                </button>
              </div>

              <div class="text-left">
                <a href="#" class="forget-link"> Forget Password? </a>
              </div>

              <div class="mb-3 text-lg-center">or</div>

              <div class="row mb-3">
                <div class="col-2">
                  
                </div>
                

                <div class="g-signin2" data-onsuccess="onSignIn">google</div>

                <hr class="my-4" />

              <div class="text-center mb-2">
                Don't have an account?
                <button class="open-button" onclick="openForm()"><a class="register-link">Register here</a>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

<!-- from -->
<div class="form-popup" id="myForm">
  <form action="/registrationMentor" method="post" class="form-container">
    <!-- <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr> -->
  
      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Enter Email" name="email" id="email" required>
  
      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" id="password" required>
  
      <label for="psw-repeat"><b>Repeat Password</b></label>
      <input type="password" placeholder="Repeat Password" name="passwordRepeat" id="passwordRepeat" required>
      <hr>
      <label for="psw-repeat"><b>OTP(sent to email)</b></label>
      <input type="password" placeholder="OTP" name="otp" id="otp" required>
      <hr>
      <div>
        <button class="btn btn-primary" type="submit" onclick="document.getElementById('form-container').value=generateid()">Send OTP</button>
      </div>
      <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
      <button type="submit" class="btn registerbtn">Register</button>
      <button type="button" class="btn cancel" onclick="closeForm()">Close</button>

    </div>
  </form>
</div> 


